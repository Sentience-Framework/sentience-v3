# Sentience
ENV='local' # local, staging, production

# Responses
RESPONSES_DEFAULT_ENCODING='json' # json, xml, url

# Errors
ERRORS_CATCH_NON_FATAL=true
ERRORS_STACK_TRACE=true

# Server
SERVER_HOST='localhost'
SERVER_PORT=8000

# Cross origin resource sharing
CORS_ACCESS_CONTROL_RETURN_ORIGIN=true
CORS_ACCESS_CONTROL_ALLOW_ORIGIN=['*']
CORS_ACCESS_CONTROL_ALLOW_CREDENTIALS=true
CORS_ACCESS_CONTROL_ALLOW_METHODS=['GET', 'POST', 'PUT', 'PATCH', 'DELETE']
CORS_ACCESS_CONTROL_ALLOW_HEADERS=['*']

# Database MySQL
# DB_DRIVER='mysql'
