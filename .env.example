# Database Postgres
DB_DRIVER='pgsql'
DB_HOST='127.0.0.1'
DB_PORT=5432
DB_NAME='sentience'
DB_USERNAME='postgres'
DB_PASSWORD=''
DB_QUERIES=[]
DB_DEBUG=true

# Database SQLite
DB_DRIVER='sqlite'
DB_FILE="${SENTIENCE_DIR}/sqlite/sentience.sqlite3"
DB_QUERIES=['PRAGMA journal_mode=WAL;']
DB_DEBUG=true
DB_READ_ONLY=false
DB_USE_PDO=true # The PHP SQLite3 class contains a bug that makes queries execute more than once when calling ->fetchArray() on SQLite3Results
